<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/berichten_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bericht_profiel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/berichttekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naamtekst"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/bericht_profiel"
        android:padding="0dp"
        android:text="@string/nieuwBericht"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/naamtekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/bericht_profiel"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tijdtekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/naamtekst"
        android:text="@string/tijd"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/bericht_afbeelding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/berichttekst"
        android:layout_below="@+id/berichttekst"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/bericht_profiel"
        android:padding="0dp"
        android:scaleType="centerCrop" />

</RelativeLayout>